{
  "node-option": [
    "experimental-specifier-resolution=node",
    "loader=ts-node/esm",
    "no-warnings=ExperimentalWarning"
  ],
  "register": ["ts-node/register", "source-map-support/register"],
  "exclude": ["**/node_modules/**"],
  "recursive": true,
  "color": true,
  "extension": ["ts"],
  "spec": "**/*.spec.ts"
}
